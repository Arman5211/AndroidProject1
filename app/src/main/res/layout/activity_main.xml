 <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="@drawable/pic"
        tools:context=".MainActivity">

     <TextView
            android:id="@+id/titleteLo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.121" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/usernameLo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            app:endIconMode="clear_text"
            android:paddingHorizontal="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titletext">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/usernameT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="name"
                android:textColor="@color/white"

                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passwordLo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingHorizontal="15dp"
            app:endIconMode="password_toggle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/usernameLo">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/passwordT"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="@color/white"

                android:text="Enter the password" />
        </com.google.android.material.textfield.TextInputLayout>

     <Button
         android:id="@+id/button_apple"
         android:layout_width="300dp"
         android:layout_height="wrap_content"
         android:layout_marginTop="128dp"
         android:backgroundTint="#62BA66"
         android:gravity="center"
         android:text="Agree and continue  "
         android:textColor="@color/white"
         android:textSize="20sp"
         android:textStyle="bold"
         app:layout_constraintEnd_toEndOf="@+id/text2"
         app:layout_constraintHorizontal_bias="0.0"
         app:layout_constraintStart_toStartOf="@+id/text2"
         app:layout_constraintTop_toBottomOf="@+id/text2" />

     <TextView
         android:id="@+id/text2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="24dp"
         android:text="By selecting Agree and continue belew,?"
         android:textColor="#0791FF"
         android:textSize="16sp"
         app:layout_constraintEnd_toEndOf="@+id/passwordLo"
         app:layout_constraintHorizontal_bias="0.491"
         app:layout_constraintStart_toStartOf="@+id/passwordLo"
         app:layout_constraintTop_toBottomOf="@+id/passwordLo" />

     <TextView
         android:id="@+id/agreele"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="I Agree to"
         android:textColor="@color/white"
         android:textStyle="bold"
         app:layout_constraintEnd_toEndOf="@+id/text2"
         app:layout_constraintHorizontal_bias="0.0"
         app:layout_constraintStart_toStartOf="@+id/text2"
         tools:layout_editor_absoluteY="486dp" />

     <TextView
         android:id="@+id/agreele"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Turms of Service and privacy policy"
         android:textColor="#43A047"
         android:textStyle="bold"
         tools:layout_editor_absoluteX="107dp"
         tools:layout_editor_absoluteY="487dp" />

     <TextView
         android:id="@+id/titletext"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:paddingLeft="dp"
         android:paddingRight="80dp"
         android:text="Looks like you don't have an account.Let's create a account for "
         android:textColor="@color/white"
         android:textSize="15dp"
         app:layout_constraintEnd_toEndOf="@+id/titleteLo"
         app:layout_constraintHorizontal_bias="1.0"
         app:layout_constraintStart_toStartOf="@+id/titleteLo"
         tools:layout_editor_absoluteY="166dp" />

     <TextView
         android:id="@+id/gmailLe"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:padding="5"
         android:text="arman@gmail.com"
         android:textColor="@color/white"
         android:textStyle="bold"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintHorizontal_bias="0.0"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/titletext" />
 </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>